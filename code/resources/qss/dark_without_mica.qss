/* QPushButton */

QPushButton {
  background-color: #373737;
  color: #cecece;
  border-radius: 4px;
  padding: 2px;
  outline: none;
  border: 2px solid #005fb8;
  min-width: 108px;
}

QPushButton:disabled {
  background-color: #434343;
  color: #a7a7a7;
  border: 2px solid #737373;
  border-radius: 4px;
  padding: 2px;
}

QPushButton:hover {
  background-color: #4b4b4b;
  color: #cfcfcf;
  border-radius: 4px;
  padding: 2px;
  outline: none;
}

QPushButton:pressed {
  background-color: #323232;
  color: #d0d0d0;
  border-radius: 4px;
  padding: 2px;
  outline: none;
}

/* QComboBox */

QComboBox QAbstractItemView {
  border-radius: 0;
  background-color: #2b2b2b;
  selection-background-color: #3c3c3c;
}

QComboBox QAbstractItemView:hover {
  background-color: #323232;
  color: #cccccc;
}

QComboBox QAbstractItemView:selected {
  background: #272727;
  color: #cccccc;
}

QComboBox QAbstractItemView:alternate {
  background: #323232;
}

QComboBox::indicator {
  border: none;
  border-radius: 0;
  background-color: transparent;
  selection-background-color: transparent;
  color: transparent;
  selection-color: transparent;
}

/* QLineEdit */

QLineEdit {
  background-color: #3c3c3c;
  border: 2px solid #9f9f9f;
  border-radius: 4px;
}

QLineEdit:focus {
  border: 2px solid #196ebf;
}

QLineEdit:selected {
  background-color: #222222;
}

/* QTabWidget */

QTabWidget {
  selection-background-color: #2b2b2b;
}

QTabWidget::pane {
  margin: 0px;
  padding: 0px;
}

/* QTabBar */

QTabBar::tab {
  background-color: #2b2b2b;
}

QTabBar::tab:selected {
  background-color: #353535;
}

QTabBar::tab:hover {
  background-color: #303030;
}

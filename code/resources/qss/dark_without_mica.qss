/* QWidget */

QWidget {
  background-color: #202020;
  color: #cccccc;
  selection-background-color: #858585;
  selection-color: #e5e5e5;
}

QWidget:disabled {
  background-color: #191919;
  color: #a0a0a0;
  selection-background-color: #858585;
  selection-color: #e5e5e5;
}

QWidget::item:selected {
  background-color: #353535;
}

QWidget::item:hover:!selected {
  background-color: #4d4d4d;
}

/* QMainWindow */

QMainWindow::separator {
  background-color: #2a2a2a;
}

QMainWindow::separator:hover {
  background-color: #2a2a2a;
}

/* QMessageBox */

QMessageBox QLabel {
  background: transparent;
}

/* QStatusBar QToolTip */

QToolTip {
  color: #cccccc;
  border: none;
  padding: 0px;
}

QStatusBar::item {
  border: none;
}

QStatusBar QToolTip {
  color: #cccccc;
  padding: 0px;
  opacity: 230;
}

QStatusBar QLabel {
  background: transparent;
}

/* QCheckBox */

QCheckBox {
  color: #cccccc;
  background: transparent;
}

QCheckBox:disabled {
  color: #7a7a7a;
  background: transparent;
}

QCheckBox::indicator:unchecked:disabled {
  color: #4c4c4c;
}

/* QRadioBox */

QRadioButton {
  color: #cccccc;
  background: transparent;
}

/* QMenuBar */

QMenuBar {
  background-color: #2f2f2f;
  color: #cccccc;
  selection-background-color: #353535;
}

/* QMenu */

QMenu::separator {
  color: #cccccc;
  background-color: #2c2c2c;
}

QMenu::item {
  background-color: #2b2b2b;
}

/* QAbstractItemView (QComboBox) */

QAbstractItemView {
  alternate-background-color: #2c2c2c;
  color: #cccccc;
}

/* QAbstractScrollArea */

QAbstractScrollArea {
  background-color: #353535;
  color: #cccccc;
  border: none;
}

/* QScrollArea */

QScrollArea QWidget {
  background-color: #353535;
}

QScrollArea QWidget QWidget:disabled {
  background: transparent;
}

QScrollArea QLabel {
  background: transparent;
}

